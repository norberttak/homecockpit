# Makefile automatically generated by ghdl
# Version: GHDL 0.37 (Ubuntu 0.37+dfsg-1ubuntu1) [Dunoon edition] - mcode code generator

GHDL=/usr/local/bin/ghdl
GHDLFLAGS= -v --std=08 -fexplicit

.PHONY: all

# Default target : elaborate
all : init elab run

# Targets to analyze libraries
init:
	@$(GHDL) -a $(GHDLFLAGS) ../common/clk_gen.vhdl
	@$(GHDL) -a $(GHDLFLAGS) ../common/utest.vhdl
	@$(GHDL) -a $(GHDLFLAGS) ../../src/homecockpit_pck.vhdl	
	@$(GHDL) -a $(GHDLFLAGS) ../../src/output.vhdl
	@$(GHDL) -a $(GHDLFLAGS) output-tb.vhdl

# Elaborate target
elab:
	@$(GHDL) -e $(GHDLFLAGS) output_tb

# Run target
run:
	@$(GHDL) -r $(GHDLFLAGS) output_tb --wave=wave.ghw

clean:
	@rm -f *.cf
	@rm -f *.o
	@rm -f *.html
	@rm -f *.ghw	
